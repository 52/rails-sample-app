<% provide :title, "Password reset" %>
<h1>Password reset</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <p>
      Enter your email address below to get the reset link sent to your inbox.
    </p>

    <%= form_tag password_resets_path do %>
      <%= label_tag :email %>
      <%= email_field_tag :email, @email, class: "form-control", required: "required", autofocus: "true" %>
      <%= submit_tag "Send me password reset link", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
